@model BgEngine.Domain.EntityModel.Subscription

@{
	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
	ViewBag.Title = Resources.AppMessages.Subscribers + " - " + Resources.AppMessages.Delete;
}

<fieldset class="ui-widget ui-widget-content ui-corner-all">
	<legend class="bg-panel ui-widget-header ui-corner-all">@String.Format(Resources.AppMessages.Localization_Delete,Model.SubscriberName)</legend>
	@Html.ValidationSummary(false)
	<table class="table-template">
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.SubscriberName)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.SubscriberName)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.SubscriberEmail)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.SubscriberEmail)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.IsConfirmed)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.IsConfirmed)
				</div>
			</td>
		</tr>

	</table>
	@using (Html.BeginForm()) {
		<p>
            @Html.AntiForgeryToken()
			<input type="submit" value="@Resources.AppMessages.Delete" />
			@Html.RouteLink(Resources.AppMessages.Back_to_List, new { controller = "Subscription", action = "Index" }, new { @class = "bg-button-back" })
		</p>
	}
</fieldset>

