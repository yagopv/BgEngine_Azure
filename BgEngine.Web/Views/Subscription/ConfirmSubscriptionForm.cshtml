@model BgEngine.Web.ViewModels.ConfirmationSubscriptionModel

@using Combres.Mvc

@{
    ViewBag.Title = Resources.AppMessages.ConfirmManually_Title;
}

@Html.CombresLink("FormJs")

<script type="text/javascript">
    $(document).ready(function () {
        $("form").form();
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div>
        <fieldset>
            <legend>@Resources.AppMessages.Confirmation_Token_Prompt</legend>            
            @Html.ValidationSummary(true)
            <table class="table-template">
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.SubscriberEmail)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.SubscriberEmail)
                            @Html.ValidationMessageFor(m => m.SubscriberEmail)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Token)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.Token)
                            @Html.ValidationMessageFor(m => m.Token)
                        </div>
                    </td>
                </tr>
            </table>
            <p>
                <input type="submit" value="@Resources.AppMessages.ConfirmManually_Submit" />
            </p>    
        </fieldset>
    </div>
}


