@{
    ViewBag.Title = Resources.AppMessages.Unsubscribe;
}

@using Combres.Mvc

@model BgEngine.Web.ViewModels.UnsubscribeViewModel
           
@Html.CombresLink("FormJs")

<script type="text/javascript">
    $(document).ready(function () {
        $("form").form();
    });
</script>

@using (Html.BeginRouteForm("Default", new { controller="Subscription", action="Unsubscribe"})) {
    <div>
        <fieldset>
            <legend>@Resources.AppMessages.Unsubscribe</legend>
            <h3><em>@Resources.AppMessages.UnsubscribeText</em></h3>
            @Html.ValidationSummary(true)
            <table class="table-template">
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Email)
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </td>
                </tr>
            </table>
            <h3 class="ui-helper-margin-top-bottom"><em>@Resources.AppMessages.Register_Recaptcha</em></h3>
            <div class="editor-field">
                    @ReCaptcha.GetHtml(theme: "white", language: Culture.Substring(0, 2))
                    @Html.ValidationMessage("recaptcha")
            </div>
            <p>
                <input type="submit" value="@Resources.AppMessages.Unsubscribe" />
            </p>    
        </fieldset>
    </div>
}


