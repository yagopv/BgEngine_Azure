@model BgEngine.Domain.EntityModel.Comment           

@using Combres.Mvc

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = Resources.AppMessages.Comment + "-" + Resources.AppMessages.Create;
}

@Html.CombresLink("CommentCss")
<script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
@Html.CombresLink("CommentJs")

<script type="text/javascript">
    $(document).ready(function () {
        $("form").form();
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)    
    <fieldset>
        <legend>@Resources.AppMessages.Localization_Create_Comment</legend>
        <table class="table-template">
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Message)
                      </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Message)
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Post)
                      </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownList("PostId", String.Empty)
                        @Html.ValidationMessageFor(model => model.PostId)
                    </div>
                </td>
            </tr>            
        </table>
        <p>
            <input type="submit" value="@Resources.AppMessages.Create" />
            @Html.RouteLink(Resources.AppMessages.Back_to_List, new { controller = "Comment", action = "Index" }, new { @class = "bg-button-back" })
        </p>
    </fieldset>
}