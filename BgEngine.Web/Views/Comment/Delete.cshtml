@model BgEngine.Domain.EntityModel.Comment

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = Resources.AppMessages.Comment + "-" + Resources.AppMessages.Delete;
}

<fieldset class="ui-widget ui-widget-content ui-corner-all">
    <legend class="bg-panel ui-widget-header ui-corner-all">@String.Format(Resources.AppMessages.Localization_Delete, "#" + Model.CommentId)</legend>
	<table class="table-template">
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.Message)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.Raw(Model.Message)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="display-label"><strong>DateCreated</strong></div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.DateCreated)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="display-label"><strong>PostId</strong></div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.PostId)
				</div>
			</td>
		</tr>
	</table>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="@Resources.AppMessages.Delete" />
            @Html.RouteLink(Resources.AppMessages.Back_to_List, new { controller = "Comment", action = "Index" }, new { @class = "bg-button-back" })
        </p>
    }
</fieldset>
