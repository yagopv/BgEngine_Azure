@model BgEngine.Domain.EntityModel.Album

@{
	ViewBag.Title = Resources.AppMessages.Album + "-" + Resources.AppMessages.Delete;
	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<fieldset class="ui-widget ui-widget-content ui-corner-all">
	<legend class="bg-panel ui-widget-header ui-corner-all">@String.Format(Resources.AppMessages.Localization_Delete, Model.Name)</legend>
	<table class="table-template">
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.Name)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.Name)
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div class="display-label">
                    @Html.LabelFor(model => model.Description)
                </div>
			</td>
			<td>
				<div class="display-field">
					@Html.DisplayFor(model => model.Description)
				</div>
			</td>
		</tr>
	</table>
	@using (Html.BeginForm()) {
	    <table class="table-template">
	    	<tr>
			    <td>
				    <strong>@Html.Label(@Resources.AppMessages.DeleteRelatedImages)</strong> 
			    </td>
			    <td>
				    <div class="display-field">
				    	@Html.CheckBox("deleteRelated")
			    	</div>
		    	</td>
	    	</tr>
        </table>
		<p>
			<input type="submit" value="Delete" />
			@Html.RouteLink(Resources.AppMessages.Back_to_List, new { controller = "Album", action = "Index" }, new { @class = "bg-button-back" })
		</p>
         @Html.AntiForgeryToken()
     }
</fieldset>
