@{
    ViewBag.Title = @Resources.AppMessages.Resource_NotFound;
}

<fieldset class="ui-widget ui-widget-content ui-corner-all">
    <legend class="bg-panel ui-widget-header ui-corner-all">@Resources.AppMessages.Resource_NotFound</legend>
        <p>@Resources.AppMessages.Resource_NotFound_ErrorMessage</p>
        <h1 class="ui-widget-content ui-state-error ui-corner-all ui-helper-padding">@ViewBag.RequestedUrl</h1>
        @if (ViewBag.ReferrerUrl != null) {
            <p>Vuelve <a href="@ViewBag.ReferrerUrl">a la página anterior</a>.</p>
        }
        @* Error page must be longer than 512 bytes for IE and Chrome to show it. 
            So add padding in case we're short. *@
        @(new string(' ', 512))
</fieldset>