@model BgEngine.Domain.EntityModel.Post

    <div id="information-buttons" class="ui-helper-width-100pc">
        <p class="tooltip ui-helper-float-left bg-panel ui-state-default ui-corner-all ui-helper-margin" title="@(String.IsNullOrEmpty(Model.Category.Description) ? Model.Category.Name : Model.Category.Description)" ><span class="ui-button bg-icon-left ui-icon ui-icon-document" ></span>@Model.Category.Name</p>
        <p class="tooltip ui-helper-float-left bg-panel ui-state-default ui-corner-all ui-helper-margin" title="@String.Format(Resources.AppMessages.DateCreatedFormat,Model.DateCreated.ToLongDateString())"><span class="ui-button bg-icon-left ui-icon ui-icon-calendar"></span>@Model.DateCreated.ToShortDateString()</p>
        <a href="@Url.RouteUrl("Default", new { controller = "User", action = "GetTooltipData", id = Model.User.UserId })" class="tooltip-ajax ui-helper-float-left bg-panel ui-state-default ui-corner-all ui-helper-margin" ><span class="ui-button bg-icon-left ui-icon ui-icon-person"></span>@Html.DisplayFor(modelitem => Model.User.Username)</a>
        <p class="tooltip ui-helper-float-left bg-panel ui-state-default ui-corner-all ui-helper-margin" title="@String.Format(Resources.AppMessages.NumberofComments,Model.Comments.Count(c => c.IsSpam == false))" ><span class="ui-button bg-icon-left ui-icon ui-icon-comment"></span>@Model.Comments.Count(c => c.IsSpam == false).ToString()</p>
    </div>